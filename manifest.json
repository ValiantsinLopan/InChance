{
    "manifest_version": 2,
    "name": "Insta Raffle",
    "description": "Play prizes using comments in Instagram",
    "version": "0.1",
    "permissions": ["tabs",
        "<all_urls>",
        "activeTab",
        "declarativeContent"
    ], 
    "background": {
        "scripts": ["jquery.js", "background.js"]
    },
    "browser_action":{
        "default_icon": "/images/128.png",
        "default_popup": "popup.html"
    },
    "icons": { "128": "/images/128.png" },
    "externally_connectable": {
        "matches": ["*://*.instagram.com/*"]
      }
    }